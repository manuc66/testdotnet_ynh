{
    "id": "testdotnet",
    "name": "Test ASP.NET Core",
    "packaging_format": 1,
    "description": {
        "en": "Host an ASP.NET Core app",
        "fr": "Heberge une application ASP.NET Core"
    },
    "version": "0.0.1",
    "url": "https://github.com/manuc66/empty-aspnet-core",
    "license": "MIT",
    "maintainer": {
        "name": "-",
        "email": "-"
    },
    "requirements": {
        "yunohost": ">= 2.7.2"
    },
    "multi_instance": true,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain",
                "ask": {
                    "en": "Choose a domain",
                    "fr": "Choisissez un domaine"
                },
                "example": "domain.org"
            },
            {
                "name": "path",
                "type": "path",
                "ask": {
                    "en": "Choose a path",
                    "fr": "Choisissez un chemin"
                },
                "example": "/testdotnet",
                "default": "/testdotnet"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "ask": {
                    "en": "Is it a public application?",
                    "fr": "Est-ce une application publique ?"
                },
                "default": true
            }
        ]
    }
}
